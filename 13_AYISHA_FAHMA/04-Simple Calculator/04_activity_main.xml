<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative1"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Here" />
    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignEnd="@id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="94dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />
    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignTop="@id/button1"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />
    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" />
    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@id/button1"
        android:layout_toLeftOf="@id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4" />
    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button4"
        android:layout_alignLeft="@id/button2"
        android:layout_alignStart="@id/button2"
        android:text="5" />
    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignLeft="@id/button3"
        android:layout_alignStart="@id/button3"
        android:layout_below="@id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />
    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@id/button4"
        android:layout_toLeftOf="@id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7" />
    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignLeft="@id/button5"
        android:layout_alignBottom="@id/button7"
        android:layout_alignStart="@id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8" />
    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button6"
        android:layout_alignLeft="@id/button6"
        android:layout_alignStart="@id/button6"
        android:text="9" />

    <Button
        android:id="@+id/buttonp"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@id/button7"
        android:layout_toLeftOf="@id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="." />

    <Button
        android:id="@+id/button0"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_toLeftOf="@id/button9"
        android:layout_toRightOf="@id/button7"
        android:text="0" />

    <Button
        android:id="@+id/buttonc"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_alignStart="@id/button9"
        android:text="c" />

    <Button
        android:id="@+id/add"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toRightOf="@id/button3"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="94dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        />
    <Button
        android:id="@+id/sub"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toRightOf="@id/button3"
        android:layout_below="@id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        />
    <Button
        android:id="@+id/mul"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toRightOf="@id/button9"
        android:layout_below="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        />
    <Button
        android:id="@+id/div"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toRightOf="@id/buttonc"
        android:layout_below="@id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        />

    <Button
        android:id="@+id/eq"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/div"
        android:layout_alignLeft="@id/button0"
        android:layout_alignRight="@id/div"
        android:layout_alignStart="@id/buttonp"
        android:layout_marginTop="17dp"
        android:text="="
        />


</RelativeLayout>