<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Here"
        android:textSize="35dp"
        android:id="@+id/edt1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_marginTop="94dp"
        android:id="@+id/button1"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@+id/edt1"
        android:text="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:layout_alignTop="@+id/button1"
        android:id="@+id/button2"
        android:textSize="@dimen/calcButtonTextSize"
        android:text="2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:id="@+id/button3"
        android:textSize="@dimen/calcButtonTextSize"
        android:text="3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:id="@+id/button4"
        android:textSize="@dimen/calcButtonTextSize"
        android:text="4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignBottom="@+id/button4"
        android:textSize="@dimen/calcButtonTextSize"

        android:id="@+id/button5"
        android:text="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:textSize="@dimen/calcButtonTextSize"

        android:id="@+id/button6"
        android:text="6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button4"
        android:textSize="@dimen/calcButtonTextSize"
        android:id="@+id/button7"
        android:layout_toLeftOf="@+id/button2"
        android:text="7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"

        android:id="@+id/button8"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignBottom="@+id/button7"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"


        android:id="@+id/button9"
        android:text="9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button7"
        android:textSize="@dimen/calcButtonTextSize"
        android:id="@+id/buttondot"
        android:layout_toLeftOf="@+id/button2"
        android:text="."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttonzero"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignBottom="@+id/buttondot"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="0"/>

    <Button
        android:id="@+id/buttonc"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignBottom="@+id/buttondot"
        android:text="C"
        android:textSize="@dimen/calcButtonTextSize" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttonadd"
        android:layout_alignEnd="@+id/edt1"
        android:layout_alignRight="@+id/edt1"
        android:layout_alignTop="@+id/button3"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_toRightOf="@+id/button3"
        android:paddingHorizontal="45dp"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="+" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttonsub"
        android:layout_alignEnd="@+id/buttonadd"
        android:layout_alignRight="@+id/buttonadd"
        android:layout_alignLeft="@+id/buttonadd"
        android:layout_alignStart="@+id/buttonadd"
        android:layout_below="@+id/buttonadd"
        android:textSize="@dimen/calcButtonTextSize"
        android:text="-" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttonmul"
        android:layout_alignEnd="@+id/buttonsub"
        android:layout_alignRight="@+id/buttonsub"
        android:layout_alignLeft="@+id/buttonsub"
        android:layout_alignStart="@+id/buttonsub"
        android:layout_below="@+id/buttonsub"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="X" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttondiv"
        android:layout_alignEnd="@+id/buttonmul"
        android:layout_alignRight="@+id/buttonmul"
        android:layout_alignLeft="@+id/buttonmul"
        android:layout_alignStart="@+id/buttonmul"
        android:layout_below="@+id/buttonmul"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="/" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttoneql"
        android:layout_alignEnd="@+id/buttondiv"
        android:layout_alignLeft="@+id/buttondot"
        android:layout_alignRight="@+id/buttondiv"
        android:layout_alignStart="@+id/buttondot"
        android:layout_below="@+id/buttonzero"
        android:layout_marginTop="37dp"
        android:textSize="@dimen/calcButtonTextSize"

        android:text="="/>









</RelativeLayout>