<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative1"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt1"
        android:hint="Enter Here"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="1"
        style="?android:attr/buttonStyleSmall"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignEnd="@+id/btn4"
        android:layout_alignRight="@+id/btn4"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="94dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="2"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignTop="@+id/btn1"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="3"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignTop="@+id/btn2"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:text="4"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@+id/btn2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/btn2"
        android:text="5"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toLeftOf="@+id/btn3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn6"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/btn3"
        android:layout_centerHorizontal="true"
        android:text="6"
        android:textSize="@dimen/calcButtonTextSize"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn7"
        android:text="7"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_below="@+id/btn4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn8"
        android:text="8"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/btn6"
        android:layout_below="@+id/btn5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:text="9"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn0"
        android:text="0"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_below="@+id/btn7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn10"
        android:text="."
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_below="@+id/btn8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnC"
        android:text="C"
        android:textSize="@dimen/calcButtonTextSize"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/btn9"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnadd"
        android:text="+"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn3"
        android:layout_marginStart="46dp"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnsub"
        android:text="-"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_toRightOf="@+id/btn6"
        android:layout_below="@+id/btnadd"
        android:layout_marginStart="46dp"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnmul"
        android:text="x"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@+id/btnsub"
        android:layout_toRightOf="@+id/btn9"
        android:layout_marginStart="46dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btndiv"
        android:text="/"
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_below="@+id/btnmul"
        android:layout_toRightOf="@+id/btnC"
        android:layout_marginStart="46dp"/>
    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/btneql"
        android:text="="
        android:textSize="@dimen/calcButtonTextSize"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn0"
        android:layout_marginStart="150dp"
        />

</RelativeLayout>