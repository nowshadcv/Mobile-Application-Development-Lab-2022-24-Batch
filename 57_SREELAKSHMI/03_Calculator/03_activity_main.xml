<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Here" />


    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_below="@id/edt1"
        android:layout_marginTop="94dp"
        android:text="1"
        android:textSize="@dimen/CalcButtonTextSize"
         />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button1"
        android:layout_toLeftOf="@id/button3"
        android:layout_toStartOf="@id/button3"
        android:text="2"
        android:textSize="@dimen/CalcButtonTextSize"
         />
    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button2"
        android:layout_centerHorizontal="true"
        android:text="3"
        android:textSize="@dimen/CalcButtonTextSize"
         />
    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_toLeftOf="@id/button2"
        android:text="4"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_toLeftOf="@id/button6"
        android:text="5"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_centerHorizontal="true"
        android:text="6"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_toLeftOf="@id/button8"
        android:text="7"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_toLeftOf="@id/button9"
        android:text="8"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button6"
        android:layout_centerHorizontal="true"
        android:text="9"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/button10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:layout_toLeftOf="@id/buttonzero"
        android:text="."
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/buttonzero"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_toLeftOf="@id/buttonclr"
        android:text="0"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/buttonclr"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_centerHorizontal="true"
        android:text="c"
        android:textSize="@dimen/CalcButtonTextSize"
        />
    <Button
        android:id="@+id/buttoneql"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/buttondiv"
        android:layout_alignLeft="@id/button10"
        android:layout_alignRight="@id/buttondiv"
        android:layout_alignStart="@id/button10"
        android:layout_below="@id/buttonzero"
        android:layout_marginTop="37dp"
        android:text="="
        android:textSize="@dimen/CalcButtonTextSize"
        />

    <Button
        android:id="@+id/buttonadd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/button3"
        android:layout_alignTop="@id/button1"
        android:text="+"
        android:textSize="@dimen/CalcButtonTextSize" />
    <Button
        android:id="@+id/buttonsub"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/button6"
        android:layout_alignTop="@id/button4"
        android:text="-"
        android:textSize="@dimen/CalcButtonTextSize" />
    <Button
        android:id="@+id/buttonmul"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/button9"
        android:layout_alignTop="@id/button7"
        android:text="*"
        android:textSize="@dimen/CalcButtonTextSize" />
    <Button
        android:id="@+id/buttondiv"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/buttonclr"
        android:layout_alignTop="@id/button10"
        android:text="/"
        android:textSize="@dimen/CalcButtonTextSize" />
    />


</RelativeLayout>